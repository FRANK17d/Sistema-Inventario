{
  "compilerOptions": {
    // ESM Configuration for Prisma 7
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2023",
    // Output
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    // Strict Type Checking
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "generated/**/*",
    "prisma.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}